{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>
    currentWeather : 
    <ul>
        <li> Temperature : {{ currentWeather.temperature }}</li>
        <li> Vitesse vent : {{ currentWeather.windSpeed }} km/h dans le sens {{ currentWeather.windDirection}}°</li>
        <li> Humidité : {{ currentWeather.humidity }}</li>
        <li> Ressenti : {{ currentWeather.feelsLike }}</li>
        <li> Rosé : {{ currentWeather.dewPoint }}</li>
        <li> Pression : {{ currentWeather.pressure }}</li>
        <li> Precipitation : {{ currentWeather.precipitation }}</li>
        <li> Nuage : {{ currentWeather.cloudCover }}</li>
        <li> Code méteo : {{ currentWeather.weathercode }}</li>
    </ul> 
</div>
{% endblock %}
